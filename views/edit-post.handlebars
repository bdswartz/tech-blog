<div class="header-banner">
    <h1>
      <a class="billboard" href="/">The Tech Blog</a>
    </h1>
</div>
<article>
  <div class="comment-card">
    <div class="post-header">
      <p class="post-title">
        Edit Post
      </p>
    </div>
  <form class="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" value="{{post.title}}"/>
    </div>
    <div>
      <label for="post-contents">Contents</label>
      <textarea id="post-contents" name="post-contents">{{post.post_contents}}</textarea>t
    </div>
    <div>
      <button type="submit" class="button">Save post</button>
      <button type="button" class="delete-post-btn button">Delete post</button>
    </div>
  </form>
</article>
{{#if loggedIn}}
  {{#if post.comments}}
    <div class="comment-card">
      <div class="post-header">
        <p class="post-title">Comments</h2>
      </div>
      {{> comments post.comments}}
      </div>
  {{/if}}
  {{> comment-form}}
{{/if}}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>