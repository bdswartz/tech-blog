{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
      <a href="/dashboard/create-post">
        <button class="btn new-post-btn">Add New Post</button>
      </a>
</section>
{{/if}}


